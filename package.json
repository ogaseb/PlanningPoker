{
  "name": "planning-poker-server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && nodemon --exec babel-node server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "pm2-runtime server/server.min.js -i 1",
    "debug": "node --inspect-brk server.min.js",
    "test": "cd client && yarn test",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "preinstall": "npm install pm2 -g",
    "precommit": "lint-staged",
    "prepush": "CI=true yarn test",
    "webpack": "webpack --config webpack.server.config.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "crypto": "^1.0.1",
    "date-and-time": "^0.14.2",
    "express": "^4.17.3",
    "jira-connector": "^2.9.0",
    "lodash": "^4.17.19",
    "pg": "^7.6.1",
    "rollbar": "^2.5.0",
    "socket.io": "^2.1.1",
    "uuid": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^4.0.1",
    "eslint": "^5.9.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "cd client && yarn test"
    }
  },
  "lint-staged": {
    "client/*.js": [
      "eslint --fix",
      "git add"
    ],
    "client/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
